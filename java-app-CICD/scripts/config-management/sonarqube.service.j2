[Unit]
Description=SonarQube service
After=syslog.target network.target

[Service]
Type=forking
ExecStart=/opt/sonarqube-10.2.1.78527/bin/linux-x86-64/sonar.sh start
ExecStop=/opt/sonarqube-10.2.1.78527/bin/linux-x86-64/sonar.sh stop
User=root
Group=root
Restart=always

[Install]
WantedBy=multi-user.target